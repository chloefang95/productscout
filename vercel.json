{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "analyze_app/vercel_app.py",
      "use": "@vercel/python"
    },
    {
      "src": "reach_app/vercel_app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "analyze_app/vercel_app.py"
    },
    {
      "src": "/api/reach",
      "dest": "reach_app/vercel_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ],
  "outputDirectory": "frontend/build"
} 